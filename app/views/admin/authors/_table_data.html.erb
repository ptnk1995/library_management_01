<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t ".index" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @authors.any? %>
      <% @authors.each_with_index do |author, index| %>
        <tr>
          <td class="text-center">
            <% params[:page] ||= Settings.authors.params_page %>
            <%= index_continue params[:page], index, Settings.authors.per_page %>
          </td>
          <td><%= author.name %></td>
          <td class="text-center">
            <%= link_to edit_admin_author_path(author), title: t(".edit"),
              class: "btn-edit-author btn btn-warning" do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to admin_author_path(author), title: t(".delete"),
              method: :delete,
              data: {confirm: t(".are_you_sure")}, class: "btn btn-danger" do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr><td colspan="4" class="text-center no-data"><%= t ".no_data" %></td></tr>
    <% end %>
  </tbody>
  <thead>
    <tr>
      <th><%= t ".index" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
</table>

<div class="row">
  <div class="col-lg-7">
    <%= t ".show" %><%= Settings.authors.per_page %> <%= t ".of" %>
    <%= @authors_size %> <%= t ".record" %><br>
  </div>
  <div class="col-lg-5">
    <%= paginate @authors, theme: "twitter-bootstrap-3" %>
  </div>
</div>
