<% provide :title, t(".books_title") %>

<div class="well well-small"><h1><%= t ".books" %></h1></div>

<div class="row heigh_table_with_button">
  <div class="col-md-2">
    <%= link_to "#", class: "btn btn-primary",
      data: {toggle: "modal", target: "#modal_create_book"} do %>
      <span><i class="fa fa-plus-square" aria-hidden="true"></i></span>
      <%= t ".new_book_button" %>
    <% end %>
  </div>
  <div class="col-md-2">
    <button class="btn btn-default btn-space">
      <%= link_to "#" do %>
        <span><i class="fa fa-download" aria-hidden="true"></i></span>
        <%= t ".export_to_excel" %>
      <% end %>
    </button>
  </div>
  <div class="col-md-8">
    <%= form_tag "#", method: :get do %>
      <div id="custom-search-input">
        <div class="input-group col-md-12">
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t(".input_books_name") %>
          <span class="input-group-btn">
            <%= button_tag type: "submit", class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "table_data" %>
